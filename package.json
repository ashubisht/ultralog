{
  "name": "ultralog",
  "version": "1.0.0",
  "type": "module",
  "description": "Simple opinionated logging module for NodeJs",
  "main": "dist/lib/Logger.js",
  "types": "dist/lib/Logger.d.ts",
  "scripts": {
    "compile": "rimraf ./dist/ && tsc -b ./tsconfig.compile.json",
    "build": "tsc -b ./tsconfig.compile.json",
    "rmdist": "rimraf ./dist/",
    "test": "jest --runInBand --forceExit",
    "typecheck": "tsc -b",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "cross-env prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "cross-env prettier --check 'src/**/*.{ts,tsx}'",
    "postinstall": "node -e \"console.log('\\u001b[32mThanks for installing ultralog!\\u001b[39m\\n\\u001b[34mFor AWS CloudWatch logging, please install \\u001b[39m\\u001b[33m\\'winston-cloudwatch\\'.\\u001b[39m\\n\\u001b[34mFor GCP Stackdriver logging, please install \\u001b[39m\\u001b[33m\\'@google-cloud/logging-winston\\'.\\u001b[39m\\n\\u001b[34mFor OpenSearch logging, please install \\u001b[39m\\u001b[33m\\'winston-opensearch\\'.\\u001b[39m')\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashubisht/ultralog.git"
  },
  "keywords": [
    "ultralog"
  ],
  "author": "ashubisht",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ashubisht/ultralog/issues"
  },
  "homepage": "https://github.com/ashubisht/ultralog#readme",
  "dependencies": {
    "logform": "^2.7.0",
    "winston": "^3.18.3"
  },
  "peerDependencies": {
    "@google-cloud/logging-winston": "^4.0.0",
    "winston-cloudwatch": "^3.0.0",
    "winston-opensearch": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "winston-cloudwatch": "^3.2.0"
  }
}
